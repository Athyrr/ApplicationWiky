<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApplicationWiky</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApplicationWiky.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ApplicationWiky</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Index">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="AddArticle">Ajout d'article</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="SearchForm">Recherche par catégorie</a>
                        </li>
                    </ul>

                    <form class="d-flex" role="search" asp-controller="Home" asp-action="Search" id="Search">
                        <input name="search" class="form-control me-2" type="search" placeholder="Rechercher">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted d-flex">
        <div class="container">
            &copy; 2024 - ApplicationWiky - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>


        @* Ne marche pas *@
        <nav aria-label="Page navigation" class="m-3">
            <ul class="pagination justify-content-end">
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" asp-area="" asp-controller="Articles" asp-action="Index" asp-route-page="1">1</a></li>
                <li class="page-item"><a class="page-link" asp-area="" asp-controller="Articles" asp-action="AddArticle" asp-route-page="2">2</a></li>
                <li class="page-item"><a class="page-link" asp-area="" asp-controller="Articles" asp-action="SearchForm" asp-route-page="3">3</a></li>
                <li class="page-item">
                    <a class="page-link" asp-area="" asp-controller="Articles" asp-action="NextPage"></a>
                    @* Action à creer avec increment *@

                </li>
            </ul>
        </nav>
    </footer>
</body>
</html>
